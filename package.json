{
  "name": "fuye",
  "productName": "1000fuye",
  "description": "1000fuye",
  "version": "0.1.0",
  "private": true,
  "main": "./main.js",
  "scripts": {
    "start": "electron . --debug",
    "start:watch": "cross-env NODE_ENV=development nodemon --ignore ./app ./dist  --watch ./**/* --exec  electron . --debug",
    "dist": "cross-env NODE_ENV=production rimraf dist && electron-builder"
  },
  "keywords": [
    "副业"
  ],
  "build": {
    "appId": "1000fuye.com",
    "files": [
      "app/build",
      "constants",
      "tasks",
      "utils",
      "main.js",
      "package.json"
    ],
    "directories": {
      "app": "./"
    },
    "win": {
      "icon": "./favicon.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "icon": "./app.png",
      "target": []
    }
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-plugin-add-module-exports": "^1.0.2",
    "cross-env": "^6.0.3",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "node-base64-image": "^1.0.6",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "devDependencies": {
    "electron": "^6.0.5",
    "electron-builder": "^22.1.0",
    "nodemon": "^1.19.1",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
